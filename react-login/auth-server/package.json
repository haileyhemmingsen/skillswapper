{
  "name": "auth-server",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@tsoa/cli": "*",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.14.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "*",
    "@types/jest": "^29.5.14",
    "concurrently": "^7.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "@firebase/rules-unit-testing": "^3.0.1",
    "typescript": "^5.1.6",
    "firebase-tools": "*"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",  
    "firebase": "^10.14.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.0",  
    "swagger-ui-express": "^5.0.0", 
    "tsoa": "^4.0.0", 
    "uuid": "^9.0.0" 
  },
  "scripts": {
    "not-prestart": "npm run build",
    "start": "node build/src/server.ts",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "predev": "npm run swagger",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "swagger": "tsoa spec-and-routes",
    "pretest": "npm run swagger",
    "emulators:start": "firebase emulators:start --only firestore --project test-project",
    "test": "firebase emulators:exec --only firestore --project test-project 'jest --runInBand --coverage --verbose --no-cache --forceExit'"
  },
  "nodemonConfig": {
    "watch": [
      "services"
    ],
    "ext": "ts",
    "exec": "ts-node services/server.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 10000,
    "collectCoverageFrom": [
      "services/**/*.[jt]s"
    ],
    "coveragePathIgnorePatterns": [
      "services/server.[jt]s",
      "index.d.ts"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "build"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
